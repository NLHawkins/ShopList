@model ShopList.Models.ChooseLocationViewModel

<div class="container">
    @using (Html.BeginForm("ChooseLocation", "Home", FormMethod.Post))
    {
    <div class="col-lg-8">
        <h2>
            Choose Your City
        </h2>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.SelectedLocId, Model.Locs, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Confirm Choice" class="btn btn-default" />
        </div>
    </div>
    }
    
</div>
